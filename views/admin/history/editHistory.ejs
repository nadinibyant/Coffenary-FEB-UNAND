    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous">
    </script>

    <script>
         document.addEventListener("DOMContentLoaded", async function () {
            //Menampilkan username yg sedang login
            const response = await fetch('/getNama', {
                method: 'GET'
            });
            const data = await response.json();

            if (data.success) {
                const username = data.username;
                const usernameProfile = document.getElementById('username');
                usernameProfile.textContent = `${username}`;
            } else {
                window.location.href = '/login';
            }

            //Mengambil id_reservasi dari URL
            function idReservationFromURL() {
                const url = window.location.href;
                const regex = /\/editReservationView\/(.+)$/;
                const match = url.match(regex);

                if (match && match[1]) {
                    return match[1];
                } else {
                    return null; 
                }
            }

            const fullName = document.getElementById("full_name");
            const numberTableOld = document.getElementById("number_table_old");
            const reservationDate = document.getElementById("reservation_date");
            const startBookingHours = document.getElementById("jam_mulai");

            const id_reservasi = idReservationFromURL()

            //Menampilkan data reservasi yang akan diedit
            try {
                const response = await fetch(`/getDetailReservasi/${id_reservasi}`);
                const data = await response.json();

                if (data.success) {
                    const dataReservasi = data.dataReservasi;
                    const dataNomorMeja = data.dataNomorMeja;

                    fullName.innerHTML  = dataReservasi.full_name;
                    numberTableOld.innerHTML  = dataReservasi.nomor_meja;
                    reservationDate.innerHTML  = dataReservasi.tanggal_reservasi;
                    startBookingHours.innerHTML  = dataReservasi.jam_mulai;
                    
                    const nomorMejaDropdown = document.getElementById("nomor_meja");
                    nomorMejaDropdown.innerHTML = "";
                    dataNomorMeja.forEach((nomorMeja) => {
                        const option = document.createElement("option");
                        option.value = nomorMeja.nomor_meja;
                        option.textContent = nomorMeja.nomor_meja;
                        nomorMejaDropdown.appendChild(option);
                    });
                } else {
                    alert(data.message);
                }
            } catch (error) {
                console.error(error);
            }

            //Menyimpan data edit reservasi
            const form = document.querySelector('form');
            form.addEventListener('submit', async (event)=> {
                event.preventDefault();

                const nomorMeja = document.getElementById("nomor_meja").value;
                if (!nomorMeja) {
                    alert('Complete The Empty Data Input');
                    return;
                }
                
                try {
                    const response = await fetch(`/editReservation/${id_reservasi}`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            nomor_meja: nomorMeja
                        })
                    });

                    const data = await response.json();
                    if (data.success) {
                        alert(data.message);
                        window.location.href = '/reservationAdmin';
                    } else {
                        alert(data.message);
                    }
                    
                } catch (error) {
                    console.error(error);
                    alert('Terjadi kesalahan saat menyimpan data reservasi.');
                }
            })

            //Logout
            const btnLogout = document.getElementById('btn-logout');
            btnLogout.addEventListener('click', async function (event) {
                event.preventDefault();
                const confirmLogout = confirm("Are you sure want to logout from this web?");

                if(confirmLogout) {
                    try {
                        const response = await fetch('/logout', {
                            method: 'POST'
                        });
                        const data = await response.json();

                        if (data.success) {
                            window.location.href = '/login';
                        } else {
                            console.log(data.message);
                            location.reload();
                        }
                    } catch (error) {
                        console.log(error);
                    }
                }
            });

        });
    </script>
