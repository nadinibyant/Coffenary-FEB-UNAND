    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous">
    </script>

    <script>
        document.addEventListener("DOMContentLoaded", async function () {
            //Menampilkan username yg sedang login
           const response = await fetch('/getNama', {
                method: 'GET'
            });
            const data = await response.json();

            if (data.success) {
                const username = data.username;
                const usernameProfile = document.getElementById('nameuser');
                usernameProfile.textContent = `${username}`;
            } else {
                window.location.href = '/login';
            }

            //Menampilkan data table
            const tbody = document.getElementById("formTableBody");
            try {
                const response = await fetch('/dataMenu');
                const data = await response.json();

                if (data.success == true) {
                    const dataMenu = data.data;
                    console.log(dataMenu)
                    var i = 1;
                        
                    dataMenu.forEach((menu) => {
                    const tr = document.createElement("tr");
                    tbody.appendChild(tr);
                    const no = document.createElement("td")
                    const photo = document.createElement("td")
                    const menuName = document.createElement('td')
                    const menuPrice = document.createElement("td")
                    const status = document.createElement("td")
                    const action = document.createElement("td")

                    tbody.appendChild(tr)
                    tr.appendChild(no)
                    tr.appendChild(photo)
                    tr.appendChild(menuName)
                    tr.appendChild(menuPrice)
                    tr.appendChild(status)
                    tr.appendChild(action)

                    no.setAttribute('scope', 'row')
                        
                    no.innerHTML = i;
                    menuName.innerHTML = menu.nama_menu
                    menuPrice.innerHTML = `Rp ${menu.harga_menu.toLocaleString()}`;
           
                    const statusSpan = document.createElement("span");
                    statusSpan.textContent = menu.status;
                    if (menu.status === "Available") {
                        statusSpan.classList.add("badge", "bg-success");
                    } else if (menu.status === "Unavailable") {
                        statusSpan.classList.add("badge", "bg-oranye", "text-danger");
                    }

                    status.innerHTML = "";
                    status.appendChild(statusSpan);

                    //img meja
                    const img = document.createElement("img");
                    img.style.height = "30 0px";
                    img.classList.add("img-thumbnail");
                    img.alt = "Menu's Image";
                    img.src = `/img/menu/${menu.foto_menu}`;
                    //drop img meja
                    photo.style.display = "flex";
                    photo.style.justifyContent = "center";
                    photo.appendChild(img);
                    i++;
                        
                    const editButton = document.createElement("button")
                    const deleteButton = document.createElement("button")

                    const editIcon = document.createElement("iconify-icon");
                    const deleteIcon = document.createElement("iconify-icon");

                   //Action edit meja
                   action.appendChild(editButton)
                    editButton.classList.add("btn", "btn-warning", "btnEdit", "me-2");
                    editIcon.icon = "mdi:pencil";
                    editIcon.style.color = "white";
                    editIcon.style.width = "15px";
                    editButton.appendChild(editIcon);
                    editButton.addEventListener('click', function() {
                        window.location.href = '/editMenuView/' + menu.id_menu;
                    });

                    //Delete meja
                    action.appendChild(deleteButton)
                    deleteButton.setAttribute('data-id',  menu.id_menu);
                    deleteButton.classList.add("btn", "btn-danger", "btnDelete", "me-2");
                    deleteIcon.icon = "mdi:delete";
                    deleteIcon.style.width = "15px";
                    deleteIcon.style.color = "white";
                    deleteButton.appendChild(deleteIcon);
                });
                } else {
                    alert(data.message);
                }
            } catch (error) {
            console.log(error);
            }

            //Action delete meja
            const btndel = document.getElementsByClassName("btnDelete")
            console.log(btndel);

            for (let i = 0; i < btndel.length; i++) {
                btndel[i].addEventListener('click', async function () {
                    const id_menu = btndel[i].getAttribute('data-id')
                    console.log(id_menu)

                    const confirmation = confirm('Are you sure to delete this menu?');
                    if(confirmation) {
                        try{
                            const response = await fetch(`/deleteMenu/${id_menu}`, {
                                method: 'DELETE'
                            }); 
                            const data = await response.json();

                            if (data.success == true) {
                                alert(data.message)
                                location.reload()
                            } else if (data.success == false) {
                                alert(data.message)
                            }
                        } catch (error) {
                            console.error(error);
                            alert('An error occurred while deleting the Menu.');
                        }
                    }
                })
            }

             //Logout
            const btnLogout = document.getElementById('btn-logout');
            btnLogout.addEventListener('click', async function (event) {
                event.preventDefault();
                const confirmLogout = confirm("Are you sure want to logout from this web?");

                if(confirmLogout) {
                    try {
                        const response = await fetch('/logout', {
                            method: 'POST'
                        });
                        const data = await response.json();

                        if (data.success) {
                            window.location.href = '/login';
                        } else {
                            console.log(data.message);
                            location.reload();
                        }
                    } catch (error) {
                        console.log(error);
                    }
                }
            });
            
        });
    </script>
