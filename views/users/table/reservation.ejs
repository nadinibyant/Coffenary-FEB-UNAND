    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous">
    </script>

    <script>
        document.addEventListener('DOMContentLoaded', async function () {
            //Menampilkan username yang sedang login
            const response = await fetch('/getNama', {
                method: 'GET'
            });

            const data = await response.json();

            if (data.success) {
                const username = data.username;
                const usernameProfile = document.getElementById('username');
                usernameProfile.textContent = `${username}`;
            } else {
                window.location.href = '/login';
            }

            //Mengambil id URL
            function idMejaFromURL() {
                const url = window.location.href;
                const regex = /\/reservationTable\/(.+)$/;
                const match = url.match(regex);

                if (match && match[1]) {
                    return match[1];
                } else {
                    return null; 
                }
            }

            //Menampilkan data meja
            const fotoMeja  = document.getElementById("foto");
            const numberTable = document.getElementById("numberTable");
            const numberSeats = document.getElementById("numberSeats");

            const id_meja = idMejaFromURL()

            try {
                const response = await fetch(`/getDataReservationTable/${id_meja}`);
                const data = await response.json();

                if (data.success) {
                    const dataTable = data.data;
                    fotoMeja.src = `/img/meja/${dataTable.foto_meja}`;
                    numberTable.innerHTML  = "Meja " + dataTable.nomor_meja;
                    numberSeats.textContent  = dataTable.jumlah_kursi + " Seats";
                } else {
                    alert(data.message);
                }
            } catch (error) {
                console.error(error);
            }

            //Menampilkan jam yang tersedia
            const jamMulaiSelect = document.getElementById("jam_mulai");
            const checkButton = document.getElementById("check");

            checkButton.addEventListener('click', async () => {
                event.preventDefault();
                const tanggalReservasiInput = document.getElementById("tanggal_reservasi").value;

                try {
                    const response = await fetch(`/getJam/${id_meja}`, {
                        method: 'POST', 
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            tanggal_reservasi: tanggalReservasiInput
                        })
                    });
                    const data = await response.json();

                    jamMulaiSelect.innerHTML = '';

                    if (data.status === 'beberapa') {
                        const jamTersedia = data.data;
                        jamTersedia.forEach((jam) => {
                            const option = document.createElement('option');
                            option.value = jam.replace(/\./g, ':');
                            option.textContent = jam;
                            jamMulaiSelect.appendChild(option);
                        });
                    } else if (data.status === 'semua') {
                        const semuaJam = data.data;
                        semuaJam.forEach((jam) => {
                            const option = document.createElement('option');
                            option.value = jam.replace(/\./g, ':');
                            option.textContent = jam;
                            jamMulaiSelect.appendChild(option);
                        });
                    }
                } catch (error) {
                    console.error(error);
                }
                
            });

            //Menampilkan daftar menu 
            const menuListContainer = document.getElementById('menu-list-container');
            try {
                const response = await fetch('/allMenuUser');
                const data = await response.json();

                if (data.success) {
                    const menuList = data.data;
                    menuList.forEach(menu => {
                        const menuCard = document.createElement('div');
                        menuCard.classList.add('menuCard', 'col', 'mb-4');
                        menuCard.dataset.menuId = menu.id_menu;

                        const cardInner = document.createElement('div');
                        cardInner.classList.add('card');
                        cardInner.style.width = '18rem';

                        const img = document.createElement('img');
                        img.src = `/img/menu/${menu.foto_menu}`;
                        img.classList.add('card-img-top', 'p-4', 'pb-0', 'background-size');
                        img.style.width = "100%";
                        img.style.objectFit = "cover"; 
                        img.style.height = "275px";
                        img.alt = "Menu Image";
                        

                        const cardBody = document.createElement('div');
                        cardBody.classList.add('card-body', 'p-4');

                        const menuName = document.createElement('div');
                        menuName.classList.add('menuName', 'col', 'fw-bold', 'pb-2', 'text-start');
                        menuName.textContent = menu.nama_menu;

                        const price = document.createElement('p');
                        price.textContent = `Rp ${menu.harga_menu}`;
                        price.classList.add('price', 'pb-2', 'text-start');

                        const status = document.createElement('p');
                        status.textContent = `${menu.status}`;
                        status.classList.add('text-end');
                        if (menu.status === 'Available') {
                            status.classList.add('text-success');
                        } else {
                            status.classList.add('text-danger');
                        }

                        const formGroup = document.createElement('div');
                        formGroup.classList.add('form-group');

                        const inputAmount = document.createElement('input');
                        inputAmount.type = 'number';
                        inputAmount.classList.add('inputAmount', 'form-control');
                        inputAmount.placeholder = 'Amount of food';
                        inputAmount.min = '0';
                        //Jika status unavailable
                        if (menu.status !== 'Available') {
                            inputAmount.disabled = true;
                        }

                        formGroup.appendChild(inputAmount);

                        cardBody.appendChild(menuName);
                        cardBody.appendChild(price);
                        cardBody.appendChild(status); 
                        cardBody.appendChild(formGroup);

                        cardInner.appendChild(img);
                        cardInner.appendChild(cardBody);

                        menuCard.appendChild(cardInner);
                        menuListContainer.appendChild(menuCard);
                    });
                } else {
                    alert(dataMenu.message);
                }
            } catch (error) {
                console.error(error);
            }

            ///Cek Price
            menuListContainer.addEventListener('input', function (event) {
                const target = event.target;
                if (target.classList.contains('inputAmount')) {
                    updateTotalPrice(); // Panggil fungsi untuk mengupdate total harga
                }
            });
            
            async function updateTotalPrice() {
                const selectedMenus = document.querySelectorAll('.menuCard');
                let orderData = [];

                selectedMenus.forEach((menuCard) => {
                    const inputAmount = menuCard.querySelector('.inputAmount');
                    const menuId = menuCard.dataset.menuId;
                    const jumlah = parseInt(inputAmount.value, 10) || 0;

                    orderData.push({ id_menu: menuId, jumlah });
                });

                try {
                    const response = await fetch('/cekHarga', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify(orderData),
                    });

                    const data = await response.json();

                    if (data.success === true) {
                        const totalPriceElement = document.getElementById('totalPrice');
                        totalPriceElement.textContent = `Rp ${data.total_harga}`;
                    } else {
                        alert(data.message);
                    }
                } catch (error) {
                    console.error(error);
                }
            }
            
            //Menyimpan data reservasi 
            const makeOrderButton = document.getElementById('makeOrder');

            makeOrderButton.addEventListener('click', async () => {
                const jumlahOrangInput = document.getElementById('jumlah_orang');
                const tanggalReservasiInput = document.getElementById('tanggal_reservasi');
                const jamMulaiInput = document.getElementById('jam_mulai');

                const jumlahOrang = parseInt(jumlahOrangInput.value, 10) || 0;
                const tanggalReservasi = tanggalReservasiInput.value;
                const jamMulai = jamMulaiInput.value;

                const selectedDateTime = new Date(`${tanggalReservasi}T${jamMulai}`);
                const currentDateTime = new Date();

                if (selectedDateTime.getTime() <= currentDateTime.getTime()) {
                    alert('Reservation time should not be earlier than or equal to current time');
                    return;
                }
                
                const orderData = Array.from(document.querySelectorAll('.menuCard')).map((menuCard) => {
                    const menuId = menuCard.dataset.menuId;
                    const inputAmount = menuCard.querySelector('.inputAmount');
                    const jumlah = parseInt(inputAmount.value, 10) || 0;

                    return { id_menu: menuId, jumlah };
                });
            
                const reservationData = {
                    jumlah_orang: jumlahOrang,
                    tanggal_reservasi: tanggalReservasi,
                    jam_mulai: jamMulai,
                    data_pesanan: orderData,
                };
                console.log('orderData:', orderData);

                try {
                     const response = await fetch(`/addReservation/${id_meja}`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify(reservationData),
                    });

                    const data = await response.json();
                    console.log('Add Reservation Response:', data);

                    if (data.success === true) {
                    alert(data.message);
                    window.location.href = '/table';
                    } else if (data.success === false) {
                        alert(data.message);
                    } else {
                        alert(data.message);
                    }
                } catch (error) {
                    console.error(error);
                }
            });

            //Logout
            const btnLogout = document.getElementById('btn-logout');
            btnLogout.addEventListener('click', async function (event) {
                event.preventDefault();
                const confirmLogout = confirm("Are you sure want to logout from this web?");

                if (confirmLogout) {
                    try {
                        const response = await fetch('/logout', {
                            method: 'POST'
                        });
            
                        if (response.status === 200) {
                            window.location.href = '/login';
                        } else {
                            console.log('Logout failed');
                            location.reload();
                        }
                    } catch (error) {
                        console.log(error);
                    }
                }
            });
            
        })
    </script>
