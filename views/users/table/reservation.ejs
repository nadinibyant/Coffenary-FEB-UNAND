<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Reservation Table</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Inter:wght@500;600;700&family=Poppins:wght@300;500;600;700&family=Princess+Sofia&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="/css/reservation.css">
    <script src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"></script>
</head>

<body>
    <div>
        <div class="sidebar pt-3 text-white" id="sidebar">
            <div class=" pe-5 ps-5">
                <div class="row">
                    <div class=" p-0">
                        <img src="/img/logo.png" class="img-fluid" alt="...">
                    </div>
                </div>
            </div>
            <li>
                <P class="fw-light fs-5  pe-5 ps-5">Hello, <span class="fw-bold" id="username"></span> ! </P>
            </li>
            <li class="p-3 ps-5 available">
                <a class="pb-2 text-white" href="/table">
                    <div class="">
                        <div class="row">
                            <div class="col-3">
                                <iconify-icon icon="mdi:desk" width="30"></iconify-icon>
                            </div>
                            <div class="col-9 ps-0 pt-1 text-start">
                                Table
                            </div>
                        </div>
                    </div>
                </a>
            </li>
            <li class="p-3 ps-5">
                <a class="pb-2 text-white" href="/historyUser">
                    <div class="">
                        <div class="row">
                            <div class="col-3">
                                <iconify-icon icon="iconamoon:history-bold" width="30"></iconify-icon>
                            </div>
                            <div class="col-9 ps-0 pt-1 text-start">
                                Reservation History
                            </div>
                        </div>
                    </div>
                </a>
            </li>
            <li class="p-3 ps-5">
                <a class="pb-2 text-white" href="/profileView">
                    <div class="">
                        <div class="row">
                            <div class="col-3">
                                <iconify-icon icon="iconamoon:profile-fill" width="30"></iconify-icon>
                            </div>
                            <div class="col-9 ps-0 pt-1 text-start">
                                Profile
                            </div>
                        </div>
                    </div>
                </a>
            </li>
            <li class="p-3 ps-5">
                <a class="pb-2 text-white" href="/logout" id="btn-logout">
                    <div class="">
                        <div class="row">
                            <div class="col-3">
                                <iconify-icon icon="majesticons:logout" width="30"></iconify-icon>
                            </div>
                            <div class="col-9 ps-0 pt-1 text-start">
                                logout
                            </div>
                        </div>
                    </div>
                </a>
            </li>
        </div>
    </div>
    <div class="p-4" id="main-content">
        <div class="container p-5 m-5">
            <div class="row">
                <div class="col">
                    <p class="fw-bold">Choosen Table</p>
                    <div class="col-3 mb-4">
                        <div class="card" style="width: 17rem;">
                            <img src="" class="card-img-top p-4 pb-0" alt="Foto Meja" id="foto">
                            <div class="card-body p-4">
                                <div class="">
                                    <div class="row">
                                        <div class="col fw-bold pb-2" id="numberTable">
                                            <!-- nomor meja -->
                                        </div>
                                        <div class="col text-end">
                                            
                                        </div>
                                    </div>
                                </div>
                                <p id="numberSeats">
                                    <!-- jumlah kursi -->
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-7">
                    <p class="fw-bold">Orderer's Identity</p>
                    <p class="fw-light">Input your identity to confirm the reservation </p>
                    <form>
                        <div class="mb-3 w-75">
                            <label for="jumlah_orang" class="form-label fw-bold">Number Of Persons</label>
                            <input type="number" class="form-control" id="jumlah_orang">
                        </div>
                        <div class="mb-3 w-75">
                            <label for="tanggal_reservasi" class="form-label fw-bold">Reservation Date</label>
                            <input type="date" class="form-control" id="tanggal_reservasi">
                        </div>
                        <button type="change" class="btn text-white btn-success mb-3" id="check">Check</button>
                        <div class="mb-3 w-75">
                            <label for="time" class="form-label fw-bold">Start Booking Hours*</label>
                            <select class="form-select" aria-label="Default select example" id="jam_mulai">
                                <!-- menampilkan jam yang tersedia -->
                            </select>
                        </div>
                        <p class="text-secondary">*Reservation only last 30 minutes.</p>
                        <button type="submit" class="btn text-white btn-light btn-reservation w-25">Reservation</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous">
    </script>

    <script>
        document.addEventListener('DOMContentLoaded', async function () {
            //Menampilkan username yang sedang login
            const response = await fetch('/getNama', {
                method: 'GET'
            });

            const data = await response.json();

            if (data.success) {
                const username = data.username;
                const usernameProfile = document.getElementById('username');
                usernameProfile.textContent = `${username}`;
            } else {
                window.location.href = '/login';
            }

            //Mengambil id URL
            function idMejaFromURL() {
                const url = window.location.href;
                const regex = /\/reservationTable\/(.+)$/;
                const match = url.match(regex);

                if (match && match[1]) {
                    return match[1];
                } else {
                    return null; 
                }
            }

            //Menampilkan data meja
            const fotoMeja  = document.getElementById("foto");
            const numberTable = document.getElementById("numberTable");
            const numberSeats = document.getElementById("numberSeats");

            const id_meja = idMejaFromURL()

            try {
                const response = await fetch(`/getDataReservationTable/${id_meja}`);
                const data = await response.json();

                if (data.success) {
                    const dataTable = data.data;
                    fotoMeja.src = `/img/meja/${dataTable.foto_meja}`;
                    numberTable.innerHTML  = "Meja " + dataTable.nomor_meja;
                    numberSeats.textContent  = dataTable.jumlah_kursi + " Seats";
                } else {
                    alert(data.message);
                }
            } catch (error) {
                console.error(error);
            }

            //Menampilkan jam yang tersedia
            const jamMulaiSelect = document.getElementById("jam_mulai");
            const checkButton = document.getElementById("check");

            checkButton.addEventListener('click', async () => {
                event.preventDefault();

                const tanggalReservasiInput = document.getElementById("tanggal_reservasi").value;

                try {
                    const response = await fetch(`/getJam/${id_meja}`, {
                        method: 'POST', 
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            tanggal_reservasi: tanggalReservasiInput
                        })
                    });
                    const data = await response.json();

                    jamMulaiSelect.innerHTML = '';

                    if (data.status === 'beberapa') {
                        const jamTersedia = data.data;
                        jamTersedia.forEach((jam) => {
                            const option = document.createElement('option');
                            option.value = jam.replace(/\./g, ':');
                            option.textContent = jam;
                            jamMulaiSelect.appendChild(option);
                        });
                    } else if (data.status === 'semua') {
                        const semuaJam = data.data;
                        semuaJam.forEach((jam) => {
                            const option = document.createElement('option');
                            option.value = jam.replace(/\./g, ':');
                            option.textContent = jam;
                            jamMulaiSelect.appendChild(option);
                        });
                    }
                } catch (error) {
                    console.error(error);
                }
                
            });
            
            //Menyimpan data reservasi
            const reservasiForm = document.querySelector('form');
            reservasiForm.addEventListener('submit', async (event) => {
                event.preventDefault();

                const jumlahOrang = document.getElementById('jumlah_orang').value;
                const tanggalReservasi = document.getElementById('tanggal_reservasi').value;
                const jamMulai = document.getElementById('jam_mulai').value;

                const response = await fetch(`/addReservation/${id_meja}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        jumlah_orang: jumlahOrang,
                        tanggal_reservasi: tanggalReservasi,
                        jam_mulai: jamMulai
                    })
                });

                const data = await response.json();

                if (data.success) {
                    alert(data.message);
                    window.location.href = '/table';
                } else {
                    alert(data.message);
                }
            });

            //Logout
            const btnLogout = document.getElementById('btn-logout');
            btnLogout.addEventListener('click', async function (event) {
                event.preventDefault();
                const confirmLogout = confirm("Are you sure want to logout from this web?");

                if(confirmLogout) {
                    try {
                        const response = await fetch('/logout', {
                            method: 'POST'
                        });
                        const data = await response.json();

                        if (data.success) {
                            window.location.href = '/login';
                        } else {
                            console.log(data.message);
                            location.reload();
                        }
                    } catch (error) {
                        console.log(error);
                    }
                }
            });
            
        })
    </script>
</body>

</html>